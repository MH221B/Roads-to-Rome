{
  "devDependencies": {
    "typescript-eslint": "^8.47.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ],
    "client/**/*.{ts,tsx}": [
      "eslint --config client/eslint.config.js"
    ],
    "server/**/*.{ts}": [
      "eslint --config server/eslint.config.mjs"
    ]
  },
  "scripts": {
    "prepare": "husky"
  }
}
